# Pacy Tech Team - Environment Variables
# Copy to .env and fill in your values

# ===================
# Supabase
# ===================
SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-key"
SUPABASE_ORG_ID="your-org-id"  # From: supabase orgs list

# Database (for direct connections)
DATABASE_URL="postgresql://postgres:PASSWORD@db.PROJECT.supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:PASSWORD@db.PROJECT.supabase.co:5432/postgres"

# ===================
# Render
# ===================
RENDER_API_KEY="rnd_xxxxxxxxxxxxxxxxxxxxx"
RENDER_OWNER_ID="tea-xxxxxxxxxxxxxxxxxxxxx"  # Your team or user ID

